<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <div class="header-details" style="flex:1;">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="Nome do Item" {{#if isLocked}}readonly{{/if}} />
            </h1>
        </div>
    </header>

    {{#if isLocked}}
    <div style="background:#330000; color:#ff4444; text-align:center; padding:5px; font-weight:bold; font-size:0.8em; margin-bottom:10px; border:1px solid #ff4444;">
        <i class="fas fa-lock"></i> MODO VISUALIZAÇÃO
    </div>
    {{/if}}

    <div class="item-stats-grid" style="grid-template-columns: 1fr 2fr;">
        
        <div class="stat-box">
            <label>QTD</label>
            <input type="number" name="system.quantity" value="{{system.quantity}}" data-dtype="Number" {{#if isLocked}}readonly{{/if}} />
        </div>

        <div class="stat-box">
            <label>CATEGORIA / TIPO</label>
            <input type="text" name="system.tags" value="{{system.tags}}" placeholder="Ex: Sucata, Recurso, Chave" {{#if isLocked}}readonly{{/if}} 
                   style="text-align: left; padding-left: 10px;"/>
        </div>
    </div>

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">DESCRIÇÃO</a>
    </nav>

    <section class="sheet-body">
        <div class="tab description" data-group="primary" data-tab="description">
            <div class="bio-editor">
                {{editor enrichedDescription target="system.description" button=true owner=owner editable=(not isLocked)}}
            </div>
        </div>
    </section>
</form>