<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Nome do Defeito"/></h1>
        </div>
    </header>

    <div class="sheet-body">
        <div class="form-group">
            <label style="font-weight:bold; color:#ff6666;">Efeito Mecânico: -2d6</label>
        </div>
        
        <hr>

        <div class="description">
            <h3>Descrição e Gatilho</h3>
            {{editor system.description target="system.description" engine="prosemirror" button=true owner=owner editable=editable}}
        </div>
    </div>
</form>