<form class="{{cssClass}} flexcol {{#if isLocked}}locked-sheet{{/if}}" autocomplete="off">

    <header class="sheet-header refuge-header">
        <div class="header-grid">
            <div class="header-profile">
                <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
            </div>
            <div class="header-main">
                <div class="header-title flexrow">
                    <h1 class="charname">
                        <input name="name" type="text" value="{{actor.name}}" placeholder="NOME DO REFÚGIO" />
                    </h1>
                    <a class="lock-btn" title="{{#if isLocked}}Destravar{{else}}Travar{{/if}}">
                        <i class="fas {{#if isLocked}}fa-lock{{else}}fa-lock-open{{/if}}"></i>
                    </a>
                </div>
                <div class="refuge-subtitle">
                    <input type="text" name="system.details.notes" value="{{system.details.notes}}"
                        placeholder="Localização ou Detalhes..." />
                </div>
            </div>
        </div>
    </header>

    <section class="refugio-dashboard">

        <div class="stat-pill defense">
            <div class="pill-icon"><i class="fas fa-shield-alt"></i></div>
            <div class="pill-data">
                <label>DEFESA</label>
                <div class="pill-values">
                    <a class="stat-control minus" data-target="defesa"><i class="fas fa-minus"></i></a>
                    <input type="number" name="system.attributes.defesa.value" value="{{system.attributes.defesa.value}}" />
                    <span class="sep">/</span>
                    <input type="number" class="max-input" name="system.attributes.defesa.max" value="{{system.attributes.defesa.max}}" />
                    <a class="stat-control plus" data-target="defesa"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>

        <div class="stat-pill resources">
            <div class="pill-icon"><i class="fas fa-box-open"></i></div>
            <div class="pill-data">
                <label>RECURSOS</label>
                <div class="pill-values">
                    <a class="stat-control minus" data-target="recursos"><i class="fas fa-minus"></i></a>
                    <input type="number" name="system.attributes.recursos.value" value="{{system.attributes.recursos.value}}" />
                    <span class="sep">/</span>
                    <input type="number" class="max-input" name="system.attributes.recursos.max" value="{{system.attributes.recursos.max}}" />
                    <a class="stat-control plus" data-target="recursos"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>

        <div class="stat-pill morale">
            <div class="pill-icon"><i class="fas fa-heart"></i></div>
            <div class="pill-data">
                <label>MORAL</label>
                <div class="pill-values">
                    <a class="stat-control minus" data-target="moral"><i class="fas fa-minus"></i></a>
                    <input type="number" name="system.attributes.moral.value" value="{{system.attributes.moral.value}}" />
                    <span class="sep">/</span>
                    <input type="number" class="max-input" name="system.attributes.moral.max" value="{{system.attributes.moral.max}}" />
                    <a class="stat-control plus" data-target="moral"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>

    </section>

    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="population"><i class="fas fa-user-friends"></i> POPULAÇÃO</a>
        <a class="item" data-tab="stock"><i class="fas fa-box-open"></i> ESTOQUE</a>
        <a class="item" data-tab="main"><i class="fas fa-warehouse"></i> PROJETOS</a>
    </nav>

    <section class="sheet-body">

        <div class="tab population" data-group="primary" data-tab="population">
            <div class="inventory-header flexrow">
                <h3>HABITANTES REGISTRADOS</h3>
                {{#unless isLocked}}
                <a class="item-create" data-type="habitante" title="Adicionar"><i class="fas fa-plus"></i> Adicionar</a>
                {{/unless}}
            </div>

            <div class="inhabitants-list-dark">
                {{#each habitantes as |item id|}}
                <div class="hab-bar item" data-item-id="{{item._id}}">
                    <div class="hab-icon-area">
                        <img src="{{item.img}}" class="hab-avatar" />
                        {{#if (gt item.system.infeccao 0)}}
                        <div class="infection-overlay active"><i class="fas fa-biohazard"></i></div>
                        {{/if}}
                    </div>
                    <div class="hab-info-area">
                        <div class="hab-name-row"><span class="hab-name-display item-edit">{{item.name}}</span></div>
                        <span class="hab-summary-text">{{item.system.funcao}}</span>
                    </div>
                    <div class="hab-stats-area">
                        <div class="hp-pill {{#if (lte item.system.saude 3)}}critical{{/if}}">
                            <i class="fas fa-heart"></i> <span>{{item.system.saude}} / {{item.system.maxSaude}}</span>
                        </div>
                        <div class="hab-controls">
                            <a class="item-edit"><i class="fas fa-edit"></i></a>
                            {{#unless ../isLocked}}<a class="item-delete"><i class="fas fa-trash"></i></a>{{/unless}}
                        </div>
                    </div>
                </div>
                {{/each}}
                {{#unless habitantes}}
                <div class="empty-state-dark"><p>Refúgio vazio.</p></div>
                {{/unless}}
            </div>

            <div class="bio-container" style="margin-top: 15px; padding-top: 10px; border-top: 1px dashed #333;">
                <h3 class="bio-header" style="font-size: 0.9em; color: #6688aa; margin-bottom: 5px;"><i class="fas fa-book"></i> DIÁRIO DE BORDO</h3>
                <div class="bio-editor" style="min-height: 200px; background: #080808; border: 1px solid #333; padding: 5px;">
                    {{editor enrichedBiography target="system.details.biography" button=true owner=owner editable=(not isLocked) engine="prosemirror"}}
                </div>
            </div>
        </div>

        <div class="tab stock" data-group="primary" data-tab="stock">
            {{> "systems/extincao/templates/actor/parts/actor-items.hbs"}}
        </div>

        <div class="tab main" data-group="primary" data-tab="main">
            <div class="inventory-header flexrow">
                <h3>ESTRUTURAS</h3>
                <div class="header-stat">STATUS</div>
                {{#unless isLocked}}<a class="item-create" data-type="projeto"><i class="fas fa-hammer"></i></a>{{/unless}}
            </div>
            <ol class="item-list">
                {{#each projetos as |item id|}}
                <li class="item flexrow" data-item-id="{{item._id}}">
                    <div class="item-image item-open" style="cursor:pointer;"><img src="{{item.img}}" /></div>
                    <div class="item-name-col flexcol item-open" style="cursor:pointer; flex:1; padding-left:10px;">
                        <h4 class="item-name" style="margin:0; color:#aaddff;">{{item.name}}</h4>
                        <span style="font-size:0.8em; color:#bbb;">Custo: {{item.system.custo}}</span>
                    </div>
                    <div class="item-detail" style="flex:0 0 100px; text-align:center;">
                        <span style="color:#888; border:1px dashed #666; padding:2px 5px; font-size:0.7em;">{{item.system.estado}}</span>
                    </div>
                    {{#unless ../isLocked}}
                    <div class="item-controls">
                        <a class="item-edit"><i class="fas fa-edit"></i></a>
                        <a class="item-delete"><i class="fas fa-trash"></i></a>
                    </div>
                    {{/unless}}
                </li>
                {{/each}}
            </ol>
        </div>

    </section>
</form>