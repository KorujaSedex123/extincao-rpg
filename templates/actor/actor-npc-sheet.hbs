<form class="{{cssClass}} flexcol extincao-sheet npc-sheet {{#if isLocked}}locked{{/if}}" autocomplete="off">

    <header class="sheet-header npc-header">
        <div class="header-grid">
            <div class="profile-img-container">
                <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
                {{#if isLocked}}<i class="fas fa-lock lock-status"></i>{{/if}}
            </div>

            <div class="header-main">
                <div class="header-row-top">
                    <input class="npc-name" name="name" type="text" value="{{actor.name}}" placeholder="NOME" {{#if isLocked}}readonly{{/if}}/>
                    
                    <div class="npc-controls">
                        <div class="archetype-box">
                            <select name="system.details.type" class="npc-type-select" {{#if isLocked}}disabled{{/if}}>
                                {{#select system.details.type}}
                                <option value="civil">Humano / Civil</option>
                                <option value="militar">Militar / Tático</option>
                                <option value="animal">Animal / Instinto</option>
                                <option value="infectado">INFECTADO</option>
                                <option value="boss">LÍDER / BOSS</option>
                                {{/select}}
                            </select>
                        </div>
                        <a class="lock-btn npc-lock"><i class="fas {{#if isLocked}}fa-lock{{else}}fa-lock-open{{/if}}"></i></a>
                    </div>
                </div>

                <div class="npc-hp-bar">
                    <label>INTEGRIDADE (PV)</label>
                    <div class="resource-inputs">
                        <a class="stat-control minus" data-target="pv"><i class="fas fa-minus"></i></a>
                        <input type="number" name="system.resources.pv.value" value="{{system.resources.pv.value}}" {{#if isLocked}}readonly{{/if}}/>
                        <span class="sep">/</span>
                        <input type="number" name="system.resources.pv.max" value="{{system.resources.pv.max}}" {{#if isLocked}}readonly{{/if}}/>
                        <a class="stat-control plus" data-target="pv"><i class="fas fa-plus"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section class="sheet-body npc-body">

        {{#if (eq system.details.type 'infectado')}}
        <div class="npc-section infected-mode">
            <div class="defense-badge">
                <label>DIFICULDADE DE ACERTO</label>
                <input type="number" name="system.attributes.defense.value" value="{{system.attributes.defense.value}}" placeholder="1" {{#if isLocked}}readonly{{/if}}/>
                <div class="defense-desc">SUCESSOS NECESSÁRIOS</div>
            </div>
            <div class="infected-note">
                <i class="fas fa-biohazard"></i> Inimigo implacável. Não esquiva.
            </div>
        </div>
        
        {{else}}
        <div class="npc-section living-mode">
            <div class="npc-attr-grid">
                {{#each system.attributes as |attr key|}}
                {{#if (and (ne key 'defense') (ne key 'attack') (ne key 'damage'))}}
                
                <div class="npc-attr-box {{#if ../isLocked}}rollable locked-box{{/if}}" 
                     data-key="{{key}}" 
                     data-label="{{attr.label}}">
                    
                    <label class="{{#unless ../isLocked}}rollable{{/unless}}" 
                           {{#unless ../isLocked}}data-key="{{key}}" data-label="{{attr.label}}"{{/unless}}>
                           {{key}}
                    </label>
                    
                    <input type="number" name="system.attributes.{{key}}.value" value="{{attr.value}}" {{#if ../isLocked}}readonly{{/if}}/>
                </div>

                {{/if}}
                {{/each}}
            </div>
            
            <div class="npc-active-defense">
                <label><i class="fas fa-shield-alt"></i> DADOS DE ESQUIVA</label>
                <div class="defense-input-row">
                    <input type="number" name="system.attributes.defense.value" value="{{system.attributes.defense.value}}" placeholder="0" {{#if isLocked}}readonly{{/if}}/>
                    <button class="roll-npc-btn rollable" data-roll-type="npc-defense" data-label="Esquiva">
                        <i class="fas fa-dice"></i> ROLAR
                    </button>
                </div>
            </div>
        </div>
        {{/if}}

        <hr class="separator-line">

        <div class="npc-attacks-section">
            <div class="section-header">
                <label><i class="fas fa-skull"></i> AÇÕES DE ATAQUE</label>
                {{#unless isLocked}}
                <a class="item-create" data-type="arma" title="Criar Ataque"><i class="fas fa-plus"></i> Novo</a>
                {{/unless}}
            </div>

            <div class="npc-attack-list">
                {{#each armas as |item id|}}
                <div class="npc-attack-card item" data-item-id="{{item._id}}">
                    <div class="attack-info">
                        <div class="attack-name">{{item.name}}</div>
                    </div>
                    
                    <div class="attack-stats">
                        <div class="stat-pill dice" title="Dados de Ataque">
                            <i class="fas fa-dice-d6"></i> {{item.system.bonus}}
                        </div>
                        <div class="stat-pill dmg" title="Dano">
                            <i class="fas fa-heart-broken"></i> {{item.system.dano}}
                        </div>
                    </div>

                    <button class="roll-npc-attack rollable" data-roll-type="item" title="Rolar Ataque">
                        <i class="fas fa-crosshairs"></i>
                    </button>

                    {{#unless ../isLocked}}
                    <div class="item-controls">
                        <a class="item-edit"><i class="fas fa-edit"></i></a>
                        <a class="item-delete"><i class="fas fa-trash"></i></a>
                    </div>
                    {{/unless}}
                </div>
                {{/each}}
                {{#if (eq armas.length 0)}}
                <div class="empty-attacks">Sem ataques.</div>
                {{/if}}
            </div>
        </div>

        <div class="npc-loot">
            <label>COMPORTAMENTO / ESPÓLIO</label>
            <div class="bio-paper">
                {{editor enrichedBiography target="system.details.biography" button=true owner=owner editable=(not isLocked)}}
            </div>
        </div>

    </section>
</form>