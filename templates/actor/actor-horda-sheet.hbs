<form class="{{cssClass}} flexcol extincao-sheet horda-sheet {{#if isLocked}}locked{{/if}}" autocomplete="off">

    <header class="sheet-header horda-header">
        <div class="header-grid">

            <div class="profile-img-container">
                <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
                {{#if isLocked}}<i class="fas fa-lock lock-status"></i>{{/if}}
            </div>

            <div class="header-main">
                <div class="header-row-top">
                    <input class="horda-name" name="name" type="text" value="{{actor.name}}" placeholder="NOME DA HORDA"
                        {{#if isLocked}}readonly{{/if}} />

                    <div class="horda-controls">
                        <input type="text" name="system.details.tipo" class="horda-type" value="{{system.details.tipo}}"
                            placeholder="Tipo de Infectado" {{#if isLocked}}readonly{{/if}} />

                        <a class="lock-btn npc-lock"><i
                                class="fas {{#if isLocked}}fa-lock{{else}}fa-lock-open{{/if}}"></i></a>
                    </div>
                </div>

                <div class="horda-size-bar">
                    <div class="bar-fill"
                        style="width: {{percentage system.attributes.tamanho.value system.attributes.tamanho.max}}%;">
                    </div>

                    <div class="bar-content">
                        <label><i class="fas fa-users"></i> TAMANHO DO ENXAME (PV)</label>
                        <div class="resource-inputs">
                            <a class="stat-control minus" data-target="tamanho"><i class="fas fa-minus"></i></a>
                            <input type="number" name="system.attributes.tamanho.value"
                                value="{{system.attributes.tamanho.value}}" {{#if isLocked}}readonly{{/if}} />
                            <span class="sep">/</span>
                            <input type="number" name="system.attributes.tamanho.max"
                                value="{{system.attributes.tamanho.max}}" {{#if isLocked}}readonly{{/if}} />
                            <a class="stat-control plus" data-target="tamanho"><i class="fas fa-plus"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section class="sheet-body horda-body">

        <div class="horda-threat-panel">

            <div class="threat-box damage">
                <div class="threat-icon"><i class="fas fa-skull-crossbones"></i></div>
                <div class="threat-data">
                    <label>DANO AUTOMÁTICO</label>
                    <input type="number" name="system.attributes.dano.value" value="{{system.attributes.dano.value}}"
                        placeholder="1" {{#if isLocked}}readonly{{/if}} />
                    <span class="threat-sub">POR RODADA/CONTATO</span>
                </div>
            </div>

            <div class="threat-box force">
                <div class="threat-icon"><i class="fas fa-fist-raised"></i></div>
                <div class="threat-data">
                    <label>FORÇA BRUTA</label>
                    <input type="number" name="system.attributes.forca.value" value="{{system.attributes.forca.value}}"
                        placeholder="1" {{#if isLocked}}readonly{{/if}} />
                    <span class="threat-sub">DADOS DE AÇÃO</span>
                </div>
            </div>

        </div>

        <div class="escape-rule-card">
            <div class="rule-header">
                <i class="fas fa-running"></i> REGRAS DE ENGAJAMENTO
            </div>
            <div class="rule-content">
                <p><strong>DANO DE CERCO:</strong> A Horda causa <strong>{{system.attributes.dano.value}}</strong> de
                    dano automático em quem terminar o turno engajado.</p>
                <hr>
                <p><strong>ESCAPAR:</strong> Exige um teste de <strong>FORÇA (Dif. 2)</strong> ou Atletismo para abrir
                    caminho.</p>
            </div>
            <button class="broadcast-rule-btn" data-action="broadcast-horda">
                <i class="fas fa-bullhorn"></i> ANUNCIAR REGRA NO CHAT
            </button>
        </div>

        <div class="horda-notes">
            <label>COMPORTAMENTO / DESCRIÇÃO</label>
            <textarea name="system.details.biography" placeholder="Descreva o comportamento da horda..." {{#if
                isLocked}}readonly{{/if}}>{{system.details.biography}}</textarea>
        </div>

    </section>
</form>