<div class="inventory-layout">

  <div class="inventory-group">
    <div class="inventory-header flexrow">
      <h3 class="item-name">ARMAS</h3>
      <div class="item-detail" style="flex: 0 0 80px;">USO</div>
      <div class="item-detail">DANO</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Add Arma" data-type="arma"><i class="fas fa-plus"></i> Add</a>
      </div>
    </div>
    <ol class="item-list">
      {{#each armas as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-image"><img src="{{item.img}}" width="24" height="24" /></div>
        <h4 class="item-name rollable" data-roll-type="item">{{item.name}}</h4>

        <div class="item-detail" style="flex: 0 0 80px; color: #4eff8c; font-weight:bold;">{{system.uso}}</div>

        <div class="item-detail">{{system.dano}}</div>
        <div class="item-controls">
          <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>

  <div class="inventory-group">
    <div class="inventory-header flexrow">
      <h3 class="item-name">EQUIPAMENTOS</h3>
      <div class="item-detail">QTD</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Add Equip" data-type="equipamento"><i class="fas fa-plus"></i>
          Add</a>
      </div>
    </div>
    <ol class="item-list">
      {{#each equipamentos as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-image"><img src="{{item.img}}" width="24" height="24" /></div>
        <h4 class="item-name">{{item.name}}</h4>

        {{#if system.isArmor}}
        <span title="Armadura: {{system.armor}}" style="color:#aaa; margin-right:5px;"><i class="fas fa-shield-alt"></i>
          {{system.armor}}</span>
        {{/if}}

        <div class="item-detail">{{system.quantity}}</div>
        <div class="item-controls">
          <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>

  <div class="inventory-group">
    <div class="inventory-header flexrow">
      <h3 class="item-name">DIVERSOS</h3>
      <div class="item-detail">QTD</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Add Item" data-type="item"><i class="fas fa-plus"></i> Add</a>
      </div>
    </div>
    <ol class="item-list">
      {{#each itens as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-image"><img src="{{item.img}}" width="24" height="24" /></div>
        <h4 class="item-name">{{item.name}}</h4>
        <div class="item-detail">{{system.quantity}}</div>
        <div class="item-controls">
          <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</div>